<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_0_5x"
    android:background="@drawable/white_round_corner_rect"
    android:padding="@dimen/default_padding_8dp">

    <TextView
        android:id="@+id/title_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_margin="@dimen/margin_0_5x"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_field"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_field"
        android:layout_width="@dimen/btn_default_width"
        android:layout_height="@dimen/btn_default_height"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/edit_text_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_text_field" />

    <EditText
        android:id="@+id/edit_text_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Edit Text Box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/title_field"
        app:layout_constraintTop_toBottomOf="@+id/title_field" />

</androidx.constraintlayout.widget.ConstraintLayout>