<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.places.PlaceInfoDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/place_detail_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/place_detail_collapsing_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
            app:expandedTitleTextAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
            app:expandedTitleMarginStart="72dp"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            >


<!--            가게 사진 swiping 되도록 넣기 -->
            <ImageView
                android:id="@+id/place_detail_toolbar_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:src="@tools:sample/backgrounds/scenic"
                app:layout_collapseMode="parallax"
                android:scaleType="centerCrop"
                />

            <View
                android:background="@drawable/detail_scrim_gradient"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/detail_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:navigationIcon="@drawable/ic_keyboard_arrow_left_black_24dp"
                app:contentInsetStart="72dp"
                app:layout_collapseMode="pin">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_large_16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/place_detail_name"
                style="@style/phHeadline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="애견호텔 이름"
                android:layout_margin="@dimen/margin_1x"
                 />

            <TextView
                android:id="@+id/place_detail_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="호텔/병원/미용"
                android:layout_below="@+id/place_detail_name"
                android:layout_margin="@dimen/margin_1x"
                />


            <LinearLayout
                android:id="@+id/place_detail_img_btn_container"
                android:layout_below="@id/place_detail_category"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingStart="@dimen/padding_large_16dp"
                android:paddingEnd="@dimen/padding_large_16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_place_detail_info"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="웹사이트"
                android:layout_weight="1"
                app:icon="@drawable/ic_info_black_24dp"

                />

            <Button
                android:id="@+id/btn_place_detail_like"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저장하기"
                app:icon="@drawable/ic_favorite_black_24dp"

                />

            <Button
                android:id="@+id/btn_place_detail_phone"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화예약"
                app:icon="@drawable/ic_local_phone_black_24dp" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_place_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/place_detail_img_btn_container"
                tools:text="@tools:sample/lorem/random"
                android:maxLines="10"
                />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

