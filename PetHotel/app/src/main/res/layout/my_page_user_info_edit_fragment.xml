<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        tools:context=".ui.register.UserInfoEditFragment"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_edit_user_info_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/phHeadline5"
                android:layout_marginTop="@dimen/margin_1x"
                android:layout_marginBottom="@dimen/margin_1x"
                android:text="회원 정보 수정" />


            <!--        이메일 입력 필드 / 버튼 텍스트 : 중복 확인 -->


<!--            회원의 모든 기존 정보들을 가져와서 띄워준다. 앞의 마이페이지 처럼 가져오면 됨 -->
            <ImageView
                android:id="@+id/img_user_edit"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/kakao_default_profile_image" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <ImageView
                    android:id="@+id/btn_upload_user_image_edit"
                    android:src="@drawable/ic_file_upload_black_24dp"
                    android:padding="@dimen/default_padding_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/btn_take_user_photo_edit"
                    android:padding="@dimen/default_padding_8dp"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_user_email_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small_4dp">


                <TextView
                    android:id="@+id/email_title_field"
                    style="@style/phTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:layout_marginBottom="@dimen/margin_0_5x"
                    android:text="이메일"
                    app:layout_constraintBottom_toTopOf="@+id/email_edit_text_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

<!--                <Button-->
<!--                    android:id="@+id/edit_email_button_field"-->
<!--                    style="?attr/materialButtonOutlinedStyle"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginEnd="8dp"-->
<!--                    android:text="수정"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent" />-->

                <Button
                    android:id="@+id/email_button_field"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="중복확인"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

<!--                <TextView-->
<!--                    android:id="@+id/email_text_field"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="4dp"-->
<!--                    android:layout_marginTop="@dimen/margin_0_5x"-->
<!--                    android:ems="10"-->
<!--                    android:text="abc@gmail.com"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="@+id/email_title_field"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/email_title_field"-->
<!--                    app:layout_constraintVertical_bias="0.55" />-->

                <EditText
                    android:id="@+id/email_edit_text_field"
                    style="@style/phEditText"
                    android:ems="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:hint="abc@gmail.com"
                    android:textSize="15sp"
                    android:textColorHint="#ff000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/email_title_field"
                    app:layout_constraintTop_toBottomOf="@+id/email_title_field" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--  이름 혹은 닉네임 입력 필드 / 버튼 텍스트 : 중복 확인 -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_user_nickname_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small_4dp">

                <TextView
                    android:id="@+id/nickname_title_field"
                    style="@style/phTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:layout_marginBottom="@dimen/margin_0_5x"
                    android:text="닉네임"
                    app:layout_constraintBottom_toTopOf="@+id/nickname_edit_text_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


<!--                <TextView-->
<!--                    android:id="@+id/nickname_text_field"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="4dp"-->
<!--                    android:layout_marginTop="@dimen/margin_0_5x"-->
<!--                    android:ems="10"-->
<!--                    android:text="털실맘"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintStart_toStartOf="@+id/nickname_title_field"-->
<!--                    app:layout_constraintTop_toBottomOf="@+id/nickname_title_field"-->
<!--                    app:layout_constraintVertical_bias="0.55" />-->

<!--                <Button-->
<!--                    android:id="@+id/edit_nickname_button_field"-->
<!--                    style="?attr/materialButtonOutlinedStyle"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginEnd="8dp"-->
<!--                    android:text="수정"-->
<!--                    app:layout_constraintEnd_toEndOf="parent"-->
<!--                    app:layout_constraintTop_toTopOf="parent" />-->

                <Button
                    android:id="@+id/nickname_button_field"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="중복확인"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/nickname_edit_text_field"
                    style="@style/phEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:hint="털실맘"
                    android:textSize="15sp"
                    android:textColorHint="#ff000000"
                    android:ems="10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/nickname_title_field"
                    app:layout_constraintTop_toBottomOf="@+id/nickname_title_field" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--       입력 값은 비밀번호 InputType.isPassword -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_user_password_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small_4dp">

                <TextView
                    android:id="@+id/password_title_field"
                    style="@style/phTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:layout_marginBottom="@dimen/margin_0_5x"
                    android:text="비밀번호"
                    app:layout_constraintBottom_toTopOf="@+id/password_edit_text_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_password_button_field"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="수정"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints" />


                <EditText
                    android:id="@+id/password_edit_text_field"
                    style="@style/phEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:ems="10"
                    android:hint="기존 비밀번호 입력"
                    android:inputType="textPassword"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/password_title_field"
                    app:layout_constraintTop_toBottomOf="@+id/password_title_field" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:text="*비밀번호를 정확히 입력해 주세요"
                android:visibility="invisible"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <!--       입력 값은 비밀번호 InputType.isPassword -->


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/register_user_password_check_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_small_4dp">

                <TextView
                    android:id="@+id/password_check_title_field"
                    style="@style/phTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:layout_marginBottom="@dimen/margin_0_5x"
                    android:text="새 비밀번호"
                    app:layout_constraintBottom_toTopOf="@+id/password_check_edit_text_field"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <EditText
                    android:id="@+id/password_check_edit_text_field"
                    style="@style/phEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:ems="10"
                    android:hint="비밀번호 확인"
                    android:inputType="textPassword"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/new_password_edit_text_field"
                    app:layout_constraintStart_toStartOf="@+id/new_password_edit_text_field"
                    app:layout_constraintTop_toBottomOf="@+id/new_password_edit_text_field" />

                <EditText
                    android:id="@+id/new_password_edit_text_field"
                    style="@style/phEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:ems="10"
                    android:hint="새로운 비밀번호 입력"
                    android:inputType="textPassword"
                    app:layout_constraintStart_toStartOf="@+id/password_check_title_field"
                    app:layout_constraintTop_toBottomOf="@+id/password_check_title_field" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tv_register_password_not_match"
                android:text="*비밀번호가 일치하지 않습니다."
                android:visibility="invisible"
                android:textColor="@android:color/holo_red_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_edit_finished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_0_5x"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:text="완료"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>