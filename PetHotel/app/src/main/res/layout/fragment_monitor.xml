<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large_16dp"
    android:orientation="vertical"
    tools:context=".ui.monitor.MonitorFragment">

<!--    <TextView-->
<!--        android:gravity="center"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:textSize="24sp"-->
<!--        android:text="모니터링 화면\n\n준비중입니다!" />-->

    <TextView
        android:id="@+id/photo_video_title"
        android:text="사진 및 동영상"
        style="@style/phTitle"
        android:layout_marginBottom="@dimen/margin_1x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- 사진 및 동영상을 admin 에서 받아온다.  -->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/monitor_view_pager"
        android:layout_width="wrap_content"
        android:layout_height="308dp"/>


    <TextView
    android:id="@+id/checklist_title"
    android:layout_marginTop="@dimen/margin_2x"
    android:text="체크리스트"
    style="@style/phTitle"
    android:layout_marginBottom="@dimen/margin_1x"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <!--    체크리스트를 띄워서 admin 과 연결한다. -->
    <include layout="@layout/monitor_checklist_layout"/>

    <TextView
        android:id="@+id/admin_msg_title"
        android:text="메시지"
        android:layout_marginTop="@dimen/margin_2x"
        android:layout_marginBottom="@dimen/margin_1x"
        style="@style/phTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--   메시지 박스를 띄워준다. -->
    <include layout="@layout/monitor_admin_msg_layout"/>

</LinearLayout>

</ScrollView>