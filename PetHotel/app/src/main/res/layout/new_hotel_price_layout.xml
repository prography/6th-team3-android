<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:background="@drawable/default_container"
        android:elevation="@dimen/layout_elevation_default"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_margin="@dimen/margin_0_5x"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="152dp">

        <TextView
            android:text="SIZE"
            style="@style/phTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="WEIGHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="$20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/margin_0_5x"
        android:background="@drawable/default_container"
        android:layout_width="match_parent"
        android:layout_height="152dp">

        <TextView
            android:text="중형견"
            style="@style/phTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="10kg ~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="$30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_0_5x"
        android:background="@drawable/default_container"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="152dp">

        <TextView
            android:text="대형견"
            style="@style/phTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="17kg ~ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="$40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>