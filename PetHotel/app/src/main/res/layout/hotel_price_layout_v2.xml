<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/padding_large_16dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/operation_time"
        android:text="영업시간  "
        android:drawableStart="@drawable/ic_baseline_access_time_24"
        android:gravity="center"
        android:drawablePadding="@dimen/padding_small_4dp"
        android:padding="@dimen/padding_large_16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_33"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_66"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/small_price_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/gl_33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/default_container"
        android:elevation="@dimen/layout_elevation_default"
        android:gravity="center"
        android:layout_margin="@dimen/margin_0_5x"
        android:orientation="vertical"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <TextView
            android:text="소형견"
            style="@style/phTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/small_size_criteria"
            android:text="7kg ~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/small_price"
            android:text="$20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/medium_price_container"
        app:layout_constraintStart_toStartOf="@id/gl_33"
        app:layout_constraintEnd_toStartOf="@id/gl_66"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_margin="@dimen/margin_0_5x"
        android:background="@drawable/default_container"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <TextView
            android:text="중형견"
            style="@style/phTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/medium_size_criteria"
            android:text="10kg ~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/medium_price"
            android:text="$30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/large_price_container"
        app:layout_constraintStart_toStartOf="@id/gl_66"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_0_5x"
        android:background="@drawable/default_container"
        android:gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp">

        <TextView
            android:text="대형견"
            style="@style/phTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/large_size_criteria"
            android:text="17kg ~ "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/large_price"
            android:text="$40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>