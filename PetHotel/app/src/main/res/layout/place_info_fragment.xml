<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.places.PlaceInfoFragment">


<!--      filter 할 수 있는 아이콘 제공 -->

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="56dp">

            <ImageView
                android:id="@+id/img_search_icon"
                android:padding="@dimen/default_padding_8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title_hotel_list"
                android:layout_centerInParent="true"
                android:text="애견호텔 찾기"
                style="@style/phTitle"
                android:textColor="@color/petHotelSecondaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/img_filter_list_icon"
                android:padding="@dimen/default_padding_8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_filter_list_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

      </RelativeLayout>



      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_place_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/place_info_view_holder" />


</LinearLayout>