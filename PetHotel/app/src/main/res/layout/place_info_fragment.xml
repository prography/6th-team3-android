<?xml version="1.0" encoding="utf-8"?>


<androidx.core.widget.NestedScrollView
    tools:context=".ui.places.PlaceInfoFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


<!--      filter 할 수 있는 아이콘 제공 -->

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="56dp">

            <ImageView
                android:id="@+id/img_search_icon"
                android:padding="@dimen/default_padding_8dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_baseline_search_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/title_hotel_list"
                android:layout_centerInParent="true"
                android:text="애견호텔 찾기"
                style="@style/phTitle"
                android:textColor="@color/petHotelSecondaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <ImageView
                android:id="@+id/img_filter_list_icon"
                android:padding="@dimen/default_padding_8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_filter_list_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

      </RelativeLayout>


      <TextView
          android:layout_margin="@dimen/margin_1x"
          style="@style/phTitle"
          android:text="가까운 애견호텔"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_place_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/place_info_view_holder_2" />

      <TextView
          android:layout_margin="@dimen/margin_1x"
          style="@style/phTitle"
          android:text="인기 애견호텔"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>

      <!--리뷰 순서대로 띄워주기 -->
      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv_popular_place_info"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>


</LinearLayout>

</androidx.core.widget.NestedScrollView>