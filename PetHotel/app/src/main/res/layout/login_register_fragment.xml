    <!--        android:layout_height="wrap_content"-->
    <!--        app:buttonSize="standard"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/btn_kakao_login" />-->


    <TextView
        android:text="간편 로그인"
        android:layout_marginTop="@dimen/margin_2x"
        android:layout_marginBottom="@dimen/margin_0_5x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<!--   <ImageButton-->
<!--       android:layout_margin="@dimen/margin_1x"-->
<!--       android:src="@drawable/kakao_login_btn_simple_medium"-->
<!--       android:background="@android:color/transparent"-->
<!--       android:layout_width="wrap_content"-->
<!--       android:layout_height="wrap_content"/>-->

    <Button
        android:id="@+id/btn_kakao_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/kakaoBlack"
        android:drawableLeft="@drawable/kakao_talk_small"
        android:text="카카오톡"
        android:textStyle="bold"
        android:backgroundTint="@color/kakaoGold"
        />

</LinearLayout>

</ScrollView>