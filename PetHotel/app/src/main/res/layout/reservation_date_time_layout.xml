<!--            android:layout_below="@id/tv_hotel_enter_date"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"/>-->

        <TextView
            android:id="@+id/tv_hotel_exit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hotel_enter_date"
            android:layout_marginTop="@dimen/margin_1x"
            android:layout_marginBottom="@dimen/margin_0_5x"
            android:background="@drawable/white_round_corner_rect"
            android:elevation="@dimen/layout_elevation_default"
            android:padding="@dimen/padding_large_16dp"
            android:text="퇴실 날짜" />

        <TextView
            android:id="@+id/tv_hotel_exit_time"
            android:background="@drawable/white_round_corner_rect"
            android:elevation="@dimen/layout_elevation_default"
            android:padding="@dimen/padding_large_16dp"
            android:layout_marginStart="@dimen/margin_1x"
            android:layout_marginTop="@dimen/margin_1x"
            android:text="퇴실 시간"
            android:layout_below="@id/tv_hotel_enter_time"
            android:layout_toEndOf="@id/tv_hotel_exit_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>