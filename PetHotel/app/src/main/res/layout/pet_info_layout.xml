<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_register_pet_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/kakao_default_profile_image" />


    <EditText
        android:id="@+id/et_register_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="반려견 이름 입력"
        android:layout_marginTop="@dimen/margin_1x"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/et_register_pet_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_register_pet_name_title"
        app:layout_constraintTop_toBottomOf="@+id/img_register_pet_image" />

    <TextView
        android:id="@+id/tv_register_pet_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반려견이름"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_register_pet_name"
        app:layout_constraintEnd_toStartOf="@+id/et_register_pet_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_register_pet_number_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동물등록번호"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_register_pet_number"
        app:layout_constraintEnd_toStartOf="@+id/et_register_pet_number"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_register_pet_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="동물등록번호 입력"
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/et_register_pet_birth_year"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_register_pet_number_title"
        app:layout_constraintTop_toBottomOf="@+id/et_register_pet_name" />

    <TextView
        android:id="@+id/tv_register_pet_birth_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="태어난 년도"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_register_pet_birth_year"
        app:layout_constraintEnd_toStartOf="@+id/et_register_pet_birth_year"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_register_pet_birth_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="몇년도에 태어났나요?"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/btn_register_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_register_pet_birth_year"
        app:layout_constraintTop_toBottomOf="@+id/et_register_pet_number" />


    <LinearLayout
    android:id="@+id/btn_register_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/margin_1x"
    android:layout_marginBottom="@dimen/margin_1x"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/et_register_pet_birth_year"
    tools:layout_editor_absoluteX="-16dp">

    <Button
        android:id="@+id/btn_register_pet_previous_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_2x"
        android:text="@string/previous_screen" />

    <Button
        android:id="@+id/btn_register_pet_info_enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_2x"
        android:text="입력완료" />

    <Button
        android:id="@+id/btn_register_pet_info_enter_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="추가 입력" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>