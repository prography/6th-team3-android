<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mypage.MyPageFragment">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_user_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/kakao_default_profile_image"
                tools:ignore="ContentDescription"
                />


            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize ="@dimen/text_size_medium"
                android:layout_marginTop="@dimen/margin_1x"
                android:layout_marginBottom="@dimen/margin_0_5x"
                android:text="@string/my_page_nickname"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mypetmily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize ="@dimen/text_size_medium"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:layout_marginBottom="@dimen/margin_0_5x"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:layout_gravity="start"
                    android:text="@string/my_page_mypetmily"
                    />

                <Button
                    android:id="@+id/btn_add_pet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_0_5x"
                    android:layout_marginBottom="@dimen/margin_0_5x"
                    android:layout_marginStart="@dimen/margin_1x"
                    android:text="추가하기"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_place_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:layout_editor_absoluteX="-40dp"
                    tools:layout_editor_absoluteY="-198dp"
                    tools:listitem="@layout/pet_info_view_holder"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>


            </LinearLayout>


            <!--       my page 밑 부분 항목        -->
            <include
                android:id="@+id/my_pick"
                layout="@layout/my_page_list_layout"/>

            <include
                android:id="@+id/my_review"
                layout="@layout/my_page_list_layout"/>

            <include
                android:id="@+id/notification_setting"
                layout="@layout/my_page_list_layout"/>

            <include
                android:id="@+id/settings"
                layout="@layout/my_page_list_layout"/>



        </LinearLayout>



    </ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

</FrameLayout>