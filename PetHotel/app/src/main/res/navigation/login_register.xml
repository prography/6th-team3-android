<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_navigation"
    app:startDestination="@id/loginRegisterFragment">

    <activity
        android:id="@+id/loginRegisterActivity"
        android:name="com.prography.pethotel.ui.register.LoginRegisterActivity"
        android:label="activity_login_register"
        tools:layout="@layout/activity_login_register"/>

    <fragment
        android:id="@+id/registerUserInfoFragment"
        android:name="com.prography.pethotel.ui.register.RegisterUserInfoFragment"
        android:label="register_user_info_fragment"
        tools:layout="@layout/register_user_info_fragment" >
        <action
            android:id="@+id/action_registerUserInfoFragment_to_registerAuthPhoneFragment"
            app:destination="@id/registerAuthPhoneFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerPetInfo"
        android:name="com.prography.pethotel.ui.register.RegisterPetInfo"
        android:label="register_pet_info_fragment"
        tools:layout="@layout/register_pet_info_fragment" >
        <action
            android:id="@+id/action_registerPetInfo_to_registerPetInfoDetailFragment"
            app:destination="@id/registerPetInfoDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerPetInfoDetailFragment"
        android:name="com.prography.pethotel.ui.register.RegisterPetInfoDetailFragment"
        android:label="register_pet_info_detail_fragment"
        tools:layout="@layout/register_pet_info_detail_fragment" >
        <argument
            android:name="numOfPets"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/registerAuthPhoneFragment"
        android:name="com.prography.pethotel.ui.register.RegisterAuthPhoneFragment"
        android:label="RegisterAuthPhoneFragment" >
        <action
            android:id="@+id/action_registerAuthPhoneFragment_to_registerPetInfo"
            app:destination="@id/registerPetInfo" />
    </fragment>
    <fragment
        android:id="@+id/loginRegisterFragment"
        android:name="com.prography.pethotel.ui.register.LoginRegisterFragment"
        android:label="login_register_fragment"
        tools:layout="@layout/login_register_fragment" >
        <action
            android:id="@+id/action_loginRegisterFragment_to_registerUserInfoFragment"
            app:destination="@id/registerUserInfoFragment" />
    </fragment>

</navigation>